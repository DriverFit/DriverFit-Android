<resources>
    <!-- Base application theme. -->
    <style name="Theme.DriverFit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary Brand Color-->
        <item name="colorSecondary">#FF00A86B</item>
        <item name="colorSecondaryVariant">#FF007A4A</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- Dark mode-->
    <!-- Screen background if dark mode on-->
    <style name="SCREEN">
        <item name="android:background">#2C2B2B</item>
    </style>

    <!-- Texts background if dark mode on-->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button background if dark mode on-->
    <style name="BUTTON">
        <item name="android:background">@color/light_blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- CardView background if light mode on-->
    <style name="CARDVIEW" parent="CardView">
        <item name="cardBackgroundColor">#464444</item>
    </style>
</resources>